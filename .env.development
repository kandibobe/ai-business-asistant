# ==============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ==============================================================================
#
# This file contains development-specific settings.
# Used for local development and debugging.
#
# To use: export ENVIRONMENT=development
# ==============================================================================

# --- Environment ---
ENVIRONMENT=development

# --- Telegram Bot Configuration ---
# Use test bot token for development
TELEGRAM_BOT_TOKEN=your_dev_telegram_bot_token_here

# --- AI Configuration ---
GEMINI_API_KEY=your_dev_gemini_api_key_here
OPENAI_API_KEY=your_dev_openai_api_key_here

# Use faster models for development
GEMINI_MODEL_NAME=gemini-1.5-flash-002
GEMINI_FLASH_MODEL=gemini-1.5-flash-002

# --- Database Configuration ---
# Local development database
DB_HOST=localhost
DB_PORT=5432
DB_USER=dev_user
DB_PASS=dev_password
DB_NAME=ai_bot_dev

# --- Redis Configuration ---
REDIS_URL=redis://localhost:6379/0

# Shorter cache TTL for development
AI_CACHE_TTL=300

# --- Logging Configuration ---
LOG_LEVEL=DEBUG
LOG_FILE=logs/development.log
JSON_LOGS=false

# --- API Configuration ---
API_PORT=8000

# Development JWT secret (NOT FOR PRODUCTION!)
JWT_SECRET_KEY=dev-secret-key-change-this-for-production-min-32-chars-long

# --- CORS ---
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# --- Security Configuration ---
# Relaxed limits for development
MAX_FILE_SIZE_MB=100
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_MINUTE_PREMIUM=200

# --- Feature Flags ---
ENABLE_AUDIO_TRANSCRIPTION=true
ENABLE_WEB_SCRAPING=true
ENABLE_AI_CACHING=true
ENABLE_METRICS=true

# --- Monitoring (Optional in dev) ---
# SENTRY_DSN=  # Usually disabled in dev

# --- Performance Tuning ---
CELERY_WORKER_CONCURRENCY=2
CELERY_TASK_TIME_LIMIT=600
MAX_CONTEXT_LENGTH=50000

# --- Development Specific ---
# Enable SQL query logging
DEBUG_SQL_QUERIES=true
DEBUG_LOG_REQUESTS=true
DEBUG_SLOW_QUERY_THRESHOLD=0.5

# Hot reload for development
RELOAD=true

# Disable SSL verification for local testing (NEVER in production!)
VERIFY_SSL=false
